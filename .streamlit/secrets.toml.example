# Streamlit Secrets Configuration Template
# Copy this file to secrets.toml and fill in your actual values
# NEVER commit secrets.toml to version control!

# MLflow Configuration
[mlflow]
tracking_uri = "sqlite:///mlflow.db"  # For local development
# tracking_uri = "https://your-mlflow-server.com"  # For production

# Data Configuration
[data]
dataset_path = "data/emi_prediction_dataset.csv"
max_rows = 400000  # Maximum rows to load

# Model Configuration
[models]
logistic_regression_path = "models/logistic_regression_classification.pkl"
random_forest_clf_path = "models/random_forest_classification.pkl"
xgboost_clf_path = "models/xgboost_classification.pkl"
linear_regression_path = "models/linear_regression_regression.pkl"
random_forest_reg_path = "models/random_forest_regression.pkl"
xgboost_reg_path = "models/xgboost_regression.pkl"

# Application Settings
[app]
debug = false
enable_caching = true
cache_ttl = 3600  # Cache time-to-live in seconds

# Performance Settings
[performance]
n_jobs = -1  # Use all CPU cores for parallel processing
chunk_size = 10000  # Chunk size for data processing

# Feature Engineering
[features]
enable_derived_features = true
min_samples_for_training = 1000

# Model Training
[training]
test_size = 0.15
val_size = 0.15
random_state = 42
enable_hyperparameter_tuning = false  # Set to true for production training
enable_early_stopping = true
early_stopping_rounds = 50

# Classification Targets
[classification]
num_classes = 3
class_names = ["Eligible", "High_Risk", "Not_Eligible"]

# Regression Targets
[regression]
rmse_target = 2000  # Target RMSE in INR
r2_target = 0.85  # Target RÂ² score

# Logging
[logging]
level = "INFO"
format = "%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Optional: Database connection (if using external DB)
# [database]
# host = "your-database-host"
# port = 5432
# database = "emi_predict"
# user = "your-username"
# password = "your-password"

# Optional: AWS S3 Configuration (for model storage)
# [aws]
# access_key_id = "your-access-key"
# secret_access_key = "your-secret-key"
# bucket_name = "your-bucket-name"
